        <form class="logout" action="/logout" method="post" style="text-align:right">
            <button type="submit" id="form_submit">Log Out</button>
        </form> 
    </div>
    <br>

    {{#if patId}}
        <p style="text-align:center">
            <a class="heading-link" href="/main/patientDataEntry">Enter Health Data</a>
        </p>
        <br>
        <div style="width:90%;margin-left:auto;margin-right:auto">
            <hr class="link-separator">
        </div>
        <br>
        <p style="text-align:center">  
            <a class="heading-link" href="/main/patientDataView">View Health Data</a>
        </p>
        <br>
        <div style="width:90%;margin-left:auto;margin-right:auto">
            <hr class="link-separator">
        </div>
        <br>
    {{else}}
        {{#if clinId}}
            <p style="text-align:center">
                <a class="heading-link" href="/main/clinicianDashboard">Clinician Dashboard</a>
            </p>
            <br>
            <div style="width:90%;margin-left:auto;margin-right:auto">
                <hr class="link-separator">
            </div>
            <br>
